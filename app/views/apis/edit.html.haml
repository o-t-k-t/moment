%section.section
  .container
    = form_with model: @user, url: api_path, method: :put, local: true do |f|
      - if @user.errors.any?
        %ul
          - @user.errors.full_messages.each do |message|
            %li= message
      .field
        = f.label :api_key
        %p.control= f.text_field :api_key, class: 'input'
      .field
        = f.label :secret_key
        %p.control= f.text_field :api_key, class: 'input'
      .field
        .control
          = f.submit t('create'), class: 'button'
