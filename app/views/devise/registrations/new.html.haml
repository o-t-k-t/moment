%section.hero.is-light.is-fullheight
  .hero-body
    .container.has-text-centered
      .column.is-4.is-offset-4
        %h3.title.has-text-grey Sign up
        .box
          = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            = devise_error_messages!
            .field
              = f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'Email', type: 'email', class: 'input'
            .field
              = f.label :password
              - if @minimum_password_length
                %em
                  (#{@minimum_password_length} characters minimum)
              %br/
              = f.password_field :password, autocomplete: 'new-password', placeholder: 'Password', type: 'password', class: 'input'
            .field
              = f.label :password_confirmation
              %br/
              = f.password_field :password_confirmation, autocomplete: 'new-password', placeholder: 'Password', type: 'password', class: 'input'
            .actions
              = f.submit 'Sign up', class: 'button is-block is-info is-fullwidth'
          = render 'devise/shared/links'
