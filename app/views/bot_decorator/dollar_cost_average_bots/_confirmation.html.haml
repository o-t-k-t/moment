%section.section
  = form_with model: bot, url: next_wizard_path, method: :put, local: true do |f|
    = f.hidden_field :type
    = f.hidden_field :currency_pair_id
    = f.hidden_field :user_id
    = f.hidden_field :level_base
    = f.hidden_field :level_slope
    = f.hidden_field :dca_settlment_amount
    = f.hidden_field :dca_interval_unit
    = f.hidden_field :dca_interval_value
    .field
      .control.has-text-centered
        = f.submit t('create'), class: 'button'
